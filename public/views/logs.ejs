<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<div class="container mx-auto mt-10">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Email Logs</h1>
        <button onclick="window.location.href='/'" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Home
        </button>
    </div>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full bg-white">
            <thead>
                <tr>
                    <th class="w-1/7 px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-sm leading-4 text-gray-600 font-medium">Sender</th>
                    <th class="w-1/7 px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-sm leading-4 text-gray-600 font-medium">Recipient</th>
                    <th class="w-1/7 px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-sm leading-4 text-gray-600 font-medium">Subject</th>
                    <th class="w-1/7 px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-sm leading-4 text-gray-600 font-medium">Body</th>
                    <th class="w-1/7 px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-sm leading-4 text-gray-600 font-medium">Status</th>
                    <th class="w-1/7 px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-sm leading-4 text-gray-600 font-medium">Date</th>
                    <th class="w-1/7 px-4 py-2 border-b-2 border-gray-200 bg-gray-100 text-left text-sm leading-4 text-gray-600 font-medium">Error</th>
                </tr>
            </thead>
            <tbody>
                <% logs.forEach(log => { %>
                    <tr class="bg-white hover:bg-gray-50">
                        <td class="border px-4 py-2 text-sm text-gray-700"><%= log.sender %></td>
                        <td class="border px-4 py-2 text-sm text-gray-700"><%= log.recipient %></td>
                        <td class="border px-4 py-2 text-sm text-gray-700"><%= log.subject %></td>
                        <td class="border px-4 py-2 text-sm text-gray-700"><%= log.body %></td>
                        <td class="border px-4 py-2 text-sm text-gray-700"><%= log.status %></td>
                        <td class="border px-4 py-2 text-sm text-gray-700"><%= new Date(log.date).toLocaleString() %></td>
                        <td class="border px-4 py-2 text-sm text-gray-700"><%= log.error %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
